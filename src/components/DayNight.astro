<script>
    const skyNight = document.querySelector<HTMLElement>(".sky-night");
    const skyDay = document.querySelector<HTMLElement>(".sky-day");
    const skySunset = document.querySelector<HTMLElement>(".sky-sunset");

    if (skyNight && skyDay && skySunset) {
        // skyDay.style.opacity = "1";
        // skySunset.style.opacity = "1";

        const animateSky = () => {
            skyNight.animate([{ opacity: 1 }, { opacity: 0 }], {
                duration: 5000,
                fill: "forwards",
                easing: "linear",
            }).onfinish = () => {
                skyDay.animate([{ opacity: 1 }, { opacity: 0 }], {
                    duration: 5000,
                    fill: "forwards",
                    easing: "linear",
                }).onfinish = () => {
                    skySunset.animate([{ opacity: 1 }, { opacity: 0 }], {
                        duration: 5000,
                        fill: "forwards",
                        easing: "linear",
                    }).onfinish = () => {
                        skyNight.animate([{ opacity: 0 }, { opacity: 1 }], {
                            duration: 0,
                            fill: "forwards",
                            easing: "linear",
                        }).onfinish = () => {
                            skyDay.animate([{ opacity: 0 }, { opacity: 1 }], {
                                duration: 0,
                                fill: "forwards",
                                easing: "linear",
                            }).onfinish = () => {
                                skySunset.animate(
                                    [{ opacity: 0 }, { opacity: 1 }],
                                    {
                                        duration: 0,
                                        fill: "forwards",
                                        easing: "linear",
                                    },
                                ).onfinish = () => {
                                    animateSky();
                                };
                            };
                        };
                    };
                };
            };
        };
        animateSky();
    }
</script>

