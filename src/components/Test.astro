---
import { getImage } from "astro:assets";
import grass from "../images/GRASS.png";
import clouds from "../images/CLOUDS.png";

const grassTile = await getImage({ src: grass, format: "avif" });
const cloudsTile = await getImage({ src: clouds, format: "avif" });
import Animation from "./Animation.astro";
---

<!-- <Animation /> -->
<section class="h-[100vh] w-[100vw] mx-auto">
    <!-- sun moon 1 -->
    <div class="absolute h-screen w-screen flex justify-center items-center">
        <div class="wrapper">
            <div class="circle"></div>
        </div>
    </div>
</section>

<style>
    .circle {
        width: 100px;
        height: 100px;
        background-color: white;
        border-radius: 50%;

        animation: xAxis 5s infinite linear;
    }

    .wrapper {
        width: 100px;
        height: 100px;
        background-color: black;

        animation: yAxis 5s infinite linear;
    }

    @keyframes xAxis {
        0% {
            transform: translateX(0px);
        }
        25% {
            transform: translateX(200px);
        }
        50% {
            transform: translateX(0px);
        }
        75% {
            transform: translateX(-200px);
        }
        100% {
            transform: translateX(0px);
        }
    }

    @keyframes yAxis {
        0% {
            transform: translateY(-200px);
        }
        25% {
            transform: translateY(0px);
        }
        50% {
            transform: translateY(200px);
        }
        75% {
            transform: translateY(0px);
        }
        100% {
            transform: translateY(-200px);
        }
    }
</style>
