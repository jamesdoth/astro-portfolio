---
import { Image, getImage } from "astro:assets";
import grass from "../images/GRASS.png";
import clouds from "../images/CLOUDS.png";

const grassTile = await getImage({ src: grass, format: "avif" });
const cloudsTile = await getImage({ src: clouds, format: "avif" });
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>Astro</title>
    </head>
    <body>
        <div class="mx-auto">
            <div
                class="deform w-1/5 h-2/5 bg-black left-[40%] top-[15%] scale-x-[3] absolute rounded-full z-40 flex"
            >
                <div
                    class="rotate overflow-hidden w-[100%] h-[100%] origin-center flex justify-start"
                >
                    <div class="counterrotate w-[50px] h-[50px]">
                        <div
                            class="inner w-12 h-12 absolute left-0 top-0 bg-transparent shadow-moon-border rounded-full scale-x-[.33]"
                        >
                        </div>
                    </div>
                </div>
            </div>
            <div
                class="deform w-1/5 h-2/5 bg-slate-600 left-[40%] top-[15%] scale-x-[3] absolute rounded-full z-40 flex"
            >
                <div
                    class="rotate overflow-hidden w-[100%] h-[100%] origin-center flex justify-end items-end"
                >
                    <div class="counterrotate absolute w-[50px] h-[50px]">
                        <div
                            class="inner w-12 h-12 absolute left-0 top-0 bg-white rounded-full scale-x-[.33]"
                        >
                        </div>
                    </div>
                </div>
            </div>

            <div
                class="animation-container overflow-hidden absolute w-full h-screen"
            >
                <div
                    class="spin-parent w-full h-full flex justify-center items-center absolute z-50 animate-spin-circle"
                >
                    <!-- z-10 -->
                    <div
                        class="center absolute w-24 h-24 bg-black rounded-full"
                    >
                        <!-- mt-[30rem] -->
                    </div>
                    <div
                        class="moon absolute w-24 h-24 left-[9%] bg-transparent shadow-moon-border rounded-full animate-moon-rotation"
                    >
                        <!-- ml-[-10rem] sm:ml-[-15rem] md:ml-[-25rem] -->
                    </div>
                    <div
                        class="sun absolute w-24 h-24 right-[9%] bg-white rounded-full"
                    >
                    </div>
                </div>
            </div>
            <div
                class="sky relative bg-gradient-to-t h-[74.5vh] from-rose-400 to-violet-900 z-0"
            >
            </div>
            <div
                class="horizon relative h-[2vh] bg-gradient-to-t from-violet-500 from-30% to-rose-300 to-40% z-20"
            >
            </div>

            <div class="ocean relative h-[6vh] bg-violet-600 z-40">
                z-20 overflow-hidden
                <div
                    class="deform w-1/5 h-[40vh] bg-black left-[30%] -top-[300%] scale-x-[3] absolute rounded-full z-40 flex"
                >
                    <div
                        class="rotate overflow-hidden w-[100%] h-[100%] origin-center flex justify-start"
                    >
                        <div class="counterrotate w-[50px] h-[50px]">
                            <div
                                class="inner w-12 h-12 absolute left-0 top-0 bg-transparent shadow-moon-border rounded-full scale-x-[.33]"
                            >
                            </div>
                        </div>
                    </div>
                </div>
                <div
                    class="deform w-1/5 h-[40vh] bg-slate-500 left-[30%] -top-[300%] scale-x-[3] absolute rounded-full z-40 flex"
                >
                    <div
                        class="rotate overflow-hidden w-[100%] h-[100%] origin-center flex justify-end items-end"
                    >
                        <div class="counterrotate absolute w-[50px] h-[50px]">
                            <div
                                class="inner w-12 h-12 absolute left-0 top-0 bg-white rounded-full scale-x-[.33]"
                            >
                            </div>
                        </div>
                    </div>
                </div>
                <!-- <div
                    class="animation-container2 overflow-hidden absolute w-full h-screen"
                >
                    <div class="spin-parent2 absolute -top-[5%] flex left-1/2">
                        -top-[12%]
                        <div
                            class="spin2 w-24 h-24 bg-white rounded-full animate-spin-counter"
                        >
                            <div
                                class="moon2 relative ml-[-35rem] w-24 h-24 bg-transparent shadow-moon-border rounded-full animate-moon-rotation2"
                            >
                            </div>
                            <div
                                class="sun2 relative ml-[35rem] bottom-[100%] w-24 h-24 bg-white rounded-full"
                            >
                            </div>
                        </div>
                    </div>
                </div> -->
            </div>

            <div class="flex">
                <div
                    style=`background-image: url(${cloudsTile.src})`
                    class="flex relative h-[384px] w-full -my-[475px] animate-move-right2 z-30"
                >
                </div>
            </div>
            <div class="flex">
                <div
                    style=`background-image: url(${grassTile.src})`
                    class="relative h-[192px] w-full bg-repeat-x -my-24 animate-move-right z-30"
                >
                </div>
            </div>
            <div
                class="ground relative h-[17.5vh] bg-gradient-to-t from-gray-950 from-0% to-amber-950 to-95% z-20"
            >
            </div>
        </div>
    </body>

    <style>
        .rotate {
            animation: circle 20s infinite linear;
        }

        .counterrotate {
            animation: ccircle 20s infinite linear;
        }

        /* @keyframes circle {
            from {
                transform: rotateZ(0deg);
            }
            to {
                transform: rotateZ(360deg);
            }
        }

        @keyframes ccircle {
            from {
                transform: rotateZ(360deg);
            }
            to {
                transform: rotateZ(0deg);
            }
        } */
    </style>
</html>
